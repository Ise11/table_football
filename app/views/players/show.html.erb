<p id="notice"><%= notice %></p>

<%= image_tag @player.avatar.url(:medium) %>

<p>
  <strong>First name:</strong>
  <%= @player.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @player.last_name %>
</p>

 <p>
  <strong>Goals:</strong>
  <%= @player.goals %>
</p>

<p>
  <strong>Points per game:</strong>
  <%= @player.points_per_game %>
</p>

<p>
  <strong>Played:</strong>
  <%= @player.how_many_matches %>
</p>

<p>
  <strong>won:</strong>
  <%= @player.won %>
</p>

<p>
  <strong>lose:</strong>
  <%= @player.lose %>
</p>


<p>


  <strong>Matches:</strong>
 

<table>
  <thead>
    <tr>
      <th>Winner name</th>
    
      <th>Winner avatar</th>
      <th>Loser name</th>
      <th>Loser avatar</th>
      <th>Match date</th>
      <th>Winner score</th>
      <th>Loser score</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @player.matches.each do |match| %>
      <tr>
        <td><%= " #{Player.find(match.winner).first_name}  #{Player.find(match.winner).last_name}" %></td>
        <td><%= image_tag Player.find(match.winner).avatar.url(:thumb) %></td>
        <td><%= "#{Player.find(match.loser).first_name} #{Player.find(match.loser).last_name}" %></td>
        <td><%= image_tag Player.find(match.loser).avatar.url(:thumb) %></td>
        <td><%= match.match_date %></td>
        <td>10</td>
        <td><%= match.loser_score %></td>
       
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to 'Edit', edit_player_path(@player) %> |
<%= link_to 'Back', players_path %>
